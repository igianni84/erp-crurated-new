###############################################################################
# Crurated ERP - Environment Configuration
###############################################################################
# This file contains all environment variables with comments explaining
# recommended values for Development, Staging, and Production environments.
###############################################################################

#------------------------------------------------------------------------------
# Application Settings
#------------------------------------------------------------------------------
APP_NAME="Crurated ERP"
APP_ENV=local                    # local | staging | production
APP_KEY=                         # Generated with: php artisan key:generate
APP_DEBUG=true                   # Dev: true | Staging: false | Prod: false
APP_URL=http://localhost         # Dev: http://localhost | Staging/Prod: https://your-domain.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file      # file | cache
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4       # Uncomment for multi-worker dev server

BCRYPT_ROUNDS=12                 # Dev: 10-12 | Prod: 12-14 (higher = slower but more secure)

#------------------------------------------------------------------------------
# Logging Configuration
#------------------------------------------------------------------------------
# Available channels: single, daily, slack, stderr, syslog, errorlog, null
#
# Dev:     LOG_CHANNEL=stack, LOG_STACK=single, LOG_LEVEL=debug
# Staging: LOG_CHANNEL=stack, LOG_STACK=daily, LOG_LEVEL=debug
# Prod:    LOG_CHANNEL=stack, LOG_STACK=daily,slack, LOG_LEVEL=warning
#------------------------------------------------------------------------------
LOG_CHANNEL=stack
LOG_STACK=single                 # Dev: single | Staging/Prod: daily (or daily,slack)
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug                  # Dev: debug | Staging: debug | Prod: warning

# Daily log settings (for production)
LOG_DAILY_DAYS=14                # Number of days to keep daily logs

# Slack notifications (for production alerts)
# LOG_SLACK_WEBHOOK_URL=         # Slack incoming webhook URL
# LOG_SLACK_USERNAME="Crurated ERP"
# LOG_SLACK_EMOJI=:warning:

#------------------------------------------------------------------------------
# Database Configuration
#------------------------------------------------------------------------------
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=crurated_erp
DB_USERNAME=root
DB_PASSWORD=                     # NEVER commit real passwords! Use secrets management in prod

#------------------------------------------------------------------------------
# Session Configuration
#------------------------------------------------------------------------------
SESSION_DRIVER=database          # Dev: file | Staging/Prod: database or redis
SESSION_LIFETIME=120             # Minutes
SESSION_ENCRYPT=false            # Prod: true (for sensitive session data)
SESSION_PATH=/
SESSION_DOMAIN=null              # Prod: set to your domain for cross-subdomain sessions

#------------------------------------------------------------------------------
# Cache Configuration
#------------------------------------------------------------------------------
# Available stores: file, database, redis, memcached, array
#
# Dev:     CACHE_STORE=file (simple, no setup required)
# Staging: CACHE_STORE=database (reliable, uses existing DB)
# Prod:    CACHE_STORE=redis (fast, recommended for production)
#------------------------------------------------------------------------------
CACHE_STORE=file                 # Dev: file | Staging: database | Prod: redis
CACHE_PREFIX=crurated_erp        # Prefix to avoid collisions in shared cache

#------------------------------------------------------------------------------
# Queue Configuration
#------------------------------------------------------------------------------
# Available drivers: sync, database, redis, sqs, beanstalkd
#
# Dev:     QUEUE_CONNECTION=sync (immediate execution, easier debugging)
# Staging: QUEUE_CONNECTION=database (test async behavior)
# Prod:    QUEUE_CONNECTION=redis or database (async with workers)
#------------------------------------------------------------------------------
QUEUE_CONNECTION=sync            # Dev: sync | Staging: database | Prod: redis or database
# QUEUE_FAILED_DRIVER=database-uuids

#------------------------------------------------------------------------------
# Redis Configuration (for production cache/queue/session)
#------------------------------------------------------------------------------
# Required when using redis for cache, queue, or session
#------------------------------------------------------------------------------
REDIS_CLIENT=phpredis            # phpredis (C extension) or predis (pure PHP)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null              # Prod: set a strong password
REDIS_PORT=6379

# Redis connection for cache (separate from default)
# REDIS_CACHE_CONNECTION=cache
# REDIS_CACHE_LOCK_CONNECTION=default

# Redis connection for queue
# REDIS_QUEUE_CONNECTION=default
# REDIS_QUEUE=default

#------------------------------------------------------------------------------
# Broadcast Configuration
#------------------------------------------------------------------------------
BROADCAST_CONNECTION=log         # Dev: log | Prod: pusher, redis, ably

#------------------------------------------------------------------------------
# Filesystem Configuration
#------------------------------------------------------------------------------
FILESYSTEM_DISK=local            # Dev: local | Prod: s3

#------------------------------------------------------------------------------
# Mail Configuration
#------------------------------------------------------------------------------
# Dev: Use log or mailpit for local testing
# Prod: Configure SMTP, SES, Mailgun, etc.
#------------------------------------------------------------------------------
MAIL_MAILER=log                  # Dev: log | Prod: smtp, ses, mailgun
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1              # Prod: smtp.mailgun.org, etc.
MAIL_PORT=2525                   # Prod: 587 (TLS) or 465 (SSL)
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="noreply@crurated.com"
MAIL_FROM_NAME="${APP_NAME}"

#------------------------------------------------------------------------------
# AWS Configuration (for S3, SES, SQS)
#------------------------------------------------------------------------------
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=eu-west-1     # Use region closest to your users
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

#------------------------------------------------------------------------------
# Memcached Configuration (alternative to Redis)
#------------------------------------------------------------------------------
MEMCACHED_HOST=127.0.0.1
# MEMCACHED_PORT=11211
# MEMCACHED_PERSISTENT_ID=
# MEMCACHED_USERNAME=
# MEMCACHED_PASSWORD=

#------------------------------------------------------------------------------
# Vite / Frontend
#------------------------------------------------------------------------------
VITE_APP_NAME="${APP_NAME}"

#------------------------------------------------------------------------------
# AI Assistant (Anthropic / Laravel AI SDK)
#------------------------------------------------------------------------------
ANTHROPIC_API_KEY=your-anthropic-api-key-here
# Use ANTHROPIC_KEY if ANTHROPIC_API_KEY conflicts with system env (e.g. Claude Desktop)
ANTHROPIC_KEY=your-anthropic-api-key-here
